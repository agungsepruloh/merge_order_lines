<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="after">
                <h2>Merge Order Lines</h2>
                <div class="row mt16 o_settings_container" name="merge_order_lines_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="auto_merge_po_line"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="auto_merge_po_line"/>
                            <div class="text-muted">
                                Merge purchase order lines with same product
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
